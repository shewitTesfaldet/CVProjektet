@model Education

@if (!string.IsNullOrEmpty(ViewBag.Meddelande))
{
    <div class="alert alert-success" role="alert">
        @ViewBag.Meddelande
    </div>
}
@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMessage
    </div>
}


<form asp-controller="CV_" asp-action="EditEducation" method="post" asp-route-EdID="@Model.EdID">

    <table class="table-bordered table" style="width: 70%; margin: auto; border-collapse: collapse; margin-top: 20px;">
        <tr>
            <td colspan="2">
                <label>Utbildning</label>
                <textarea asp-for="Description" rows="4" class="form-control" placeholder="Namnet på utbildningen"></textarea>
            </td>
        </tr>
        <tr>
            <td>
                <label asp-for="BeginDate">Startdatum</label>
                <input asp-for="BeginDate" type="date" class="form-control" />
            </td>

            <td>
                <label asp-for="EndDate">Slutdatum</label>
                <input asp-for="EndDate" type="date" class="form-control" />
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <input type="submit" value="Ändra" class="btn btn-primary" />
            </td>
        </tr>

    </table>

</form>

<form method="get" asp-controller="CV_" asp-action="AddEducation">
    <button class="btn btn-outline-success" type="submit" value="submit">Tillbaka</button>
</form>
