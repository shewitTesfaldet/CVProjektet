@model LoginViewModel
<form method="post" asp-action="LogIn">

    <head>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Karla:wght@200;300;400;500&display=swap" rel="stylesheet">
    </head>
    <div asp-validation-summary="All" class="text-danger"></div> @*Fungerar ej vrf?*@
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6 col-md-7 intro-section">
                <div class="brand-wrapper">
                    <h1>JobConnect</h1>
                </div>
                <div class="intro-content-wrapper">
                    <h1 class="intro-title">Välkommen till hemsidan för arbetsgivare & arbetstagare!</h1>
                    <p class="intro-text">
                        På denna hemsidan hittar du som arbetsgivare enkelt människor som söker arbete, deras personliga CV och projekt de varit involverade i. Du kan dessutom enkelt interagera med människor genom vår chatt-funktion. Testa JobConnect idag!
                    </p>
                    <a href="#!" class="btn btn-read-more">Läs mer</a>
                </div>
                <div class="intro-section-footer">
                    <na class="footer-nav">
                        <a href="#!">Facebook</a>
                        <a href="#!">Twitter</a>
                        <a href="#!">Gmail</a>
                    </na>
                </div>
            </div>
            <div class="col-sm-6 col-md-5 form-section">
                <div class="login-wrapper">
                    <h2 class="login-title">Sign in</h2>
                        <div class="form-group">
                            <input type="text" asp-for="UserName" id="email" class="form-control" placeholder="Användarnamn">
                        </div>
                        <div class="form-group mb-3">
                            <input type="password" asp-for="Password" id="password" class="form-control" placeholder="Lösenord">
                        </div>

                    <div style="position:relative; float:right;">
                    <input type="checkbox" title="Remember me" asp-for="RememberMe" class="form-check" />
                    <label class="login-wrapper-footer-text">Kom ihåg mig</label>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-5">
                        <button type="submit" id="login" class="btn login-btn">Login</button>

                        </div>
                   
                    <p class="login-wrapper-footer-text">Har du inget konto? <a asp-action="Register" class="text-reset">Registrera dig</a></p>
                </div>
            </div>
        </div>
    </div>
                        </form>

