@model User

<div class="container" style="margin-top: 25px;">
    <h4>Profilinformation</h4>

    <table class="table-bordered table" style="width: 70%; margin: auto; border-collapse: collapse; margin-top: 20px; border: 10px solid DarkSeaGreen;">
        <tbody>
            <tr>
                <td>
                    <div class="profile-container" style="margin-bottom: 1em; border: 1px solid black; padding: 10px">
                        <h4>@Model.Firstname @Model.Lastname</h4>
                        <p>Password: @Model.Password</p>
                        <p>Email: @Model.Epost</p>
                        <p>Adress: @Model.Adress</p>

                        <a class="btn btn-outline-success" asp-controller="User" asp-action="Profile" asp-route-UID="@Model.Username">Uppdatera</a>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
</div>



