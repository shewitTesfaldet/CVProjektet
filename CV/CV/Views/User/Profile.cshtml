@model User
<form asp-action="Profile" method="post">

    <table class="table-bordered" style="width: 60%; margin: auto; border-collapse: collapse; margin-top: 20px;">

        <tr>
            <td>
                <label asp-for="Username">Username:</label>
            </td>
         
         
            <td>
                <input asp-for="Username" type="text" class="form-control" />
            </td>
        </tr>
        <tr>
            <td>
                <label asp-for="Password">Password:</label>
            </td>
         
            <td>
                <input asp-for="Password" type="text" class="form-control" />
            </td>
        </tr>
        <tr>
            <td>
                <label asp-for="ConfirmPassword">Confirm new password:</label>
            </td>
            <td>
                <input asp-for="ConfirmPassword" type="text" class="form-control" />
            </td>
        </tr>
        <tr>
            <td>
                <label asp-for="Firstname">First Name:</label>
            </td>
    
            <td>
                <input asp-for="Firstname" type="text" class="form-control" />
            </td>
        </tr>
        <tr>
            <td>
                <label asp-for="Lastname">Last Name:</label>
            </td>
          
            <td>
                <input asp-for="Lastname" type="text" class="form-control" />
            </td>
        </tr>
        <tr>
            <td>
                <label asp-for="Epost">Email:</label>
            </td>
         
            <td>
                <input asp-for="Epost" type="text" class="form-control" />
            </td>
        </tr>
        <tr>
            <td>
                <label asp-for="Adress">Address:</label>
            </td>
         
            <td>
                <input asp-for="Adress" type="text" class="form-control" />
            </td>
        </tr>


        <tr>
            <td colspan="4" style="text-align: center;">
                <input type="submit" value="Bekräfta ändringar" class="btn btn-primary" />
            </td>
        </tr>
    </table>
    @if (ViewBag.Message != null)
    {
        <p>@ViewBag.Message</p>
    }

</form>

